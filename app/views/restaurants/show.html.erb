<div class="container">
<h1>Mon bon resto :</h1>
<br>
<h2><%= @restaurant.name %></h2>
<h3><%= @restaurant.category %></h3>
<p><%= @restaurant.address %> | <%= @restaurant.phone_number %></p>
  <ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> | <%= review.rating %></li>
  <% end %>
  </ul>
<br>
<%= link_to "Back", restaurants_path, class: "btn btn-primary"%>
<br>
<h1>Add a review:</h1>
<%= render partial: "reviews/new", locals: { review: @review, restaurant: @restaurant } %>
</div>
